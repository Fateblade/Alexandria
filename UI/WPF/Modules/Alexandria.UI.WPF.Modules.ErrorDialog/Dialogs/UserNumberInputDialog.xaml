<UserControl x:Class="Fateblade.Alexandria.UI.WPF.Client.Dialogs.UserNumberInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uiBehaviour="clr-namespace:Fateblade.Alexandria.UI.WPF.Base.UiBehaviour;assembly=Alexandria.UI.WPF.Base"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" >
    <Grid>
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Path=Question}"  
                       TextWrapping="Wrap" />

            <TextBox Grid.Row="1" Text="{Binding Path=Value, Converter={StaticResource Alexandria.Converters.IntToStringConverter}, UpdateSourceTrigger=PropertyChanged}"
                     uiBehaviour:TextBoxEnterPressedCommand.EnterPressedCommand="{Binding Path=AcceptInputCommand}"
            />

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="Confirm" 
                        Command="{Binding Path=AcceptInputCommand}" />

                <Button Margin="8,0,0,0"
                        Content="Abort" 
                        Command="{Binding Path=AbortDialogCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

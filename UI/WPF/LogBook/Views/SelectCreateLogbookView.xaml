<UserControl x:Class="Fateblade.Alexandria.UI.WPF.Modules.LogBook.Views.SelectCreateLogbook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fateblade.Alexandria.UI.WPF.Modules.LogBook.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition x:Name="RowHeight"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" Grid.Column="0"
                     ItemsSource="{Binding Path=ExistingLogbooks}"
                     SelectedItem="{Binding Path=SelectedLogbook}"
                     Height="{Binding ElementName=RowHeight, Path=Height}"
                     DisplayMemberPath="Name" />

            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="4,4,0,4"
                        Orientation="Vertical"
                        VerticalAlignment="Center">

                <Button Content="+" 
                        Command="{Binding Path=CreateNewLogbookCommand}"/>

                <Button Margin="0,4,0,0"
                        Content="-"
                        Command="{Binding Path=DeleteLogbookCommand}"/>

            </StackPanel>


            <Button Grid.Row="1" Grid.Column="0" Margin="0,4,0,0" 
                    HorizontalAlignment="Center"
                    Content="Open"
                    Command="{Binding Path=OpenLogbookCommand}"/>

        </Grid>
    </Grid>
</UserControl>
